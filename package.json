{
  "name": "accessory_bar2",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "dev": "NODE_ENV=development ts-node ./server/server.ts",
    "generate": "rm ./public/index.min.js || true && tsc --p tsconfig.minify.json ./shopfront/*.ts && mv ./shopfront/*.js ./public/ && uglifyjs --compress --mangle --output ./public/index.min.js -- ./public/*.js",
    "gen": "tsc --p tsconfig.minify.json && uglifyjs --compress --mangle --output ./public/index.min.js -- ./shopfront/*.js && rm ./shopfront/*.js",
    "build": "next build",
    "start": "NODE_ENV=production ts-node ./server/server.ts",
    "updateScriptTags": "ts-node ./utils/backend/updateScriptTag.ts",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "@babel/polyfill": "^7.11.5",
    "@koa/cors": "^3.1.0",
    "@shopify/app-bridge-react": "^1.27.2",
    "@shopify/koa-shopify-auth": "^3.1.70",
    "@shopify/koa-shopify-graphql-proxy": "^4.0.2",
    "@shopify/koa-shopify-webhooks": "^2.5.1",
    "@shopify/polaris": "^5.6.1",
    "@shopify/polaris-icons": "^4.0.0",
    "@types/koa-router": "^7.4.1",
    "@zeit/next-css": "^1.0.1",
    "axios": "^0.20.0",
    "commonjs": "^0.0.1",
    "dotenv": "^8.2.0",
    "graphql": "^15.3.0",
    "graphql-tag": "^2.11.0",
    "isomorphic-fetch": "^3.0.0",
    "js-cookie": "^2.2.1",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-router": "^9.4.0",
    "koa-session": "^6.1.0",
    "koa-static": "^5.0.0",
    "next": "^9.5.5",
    "next-urql": "^2.0.0",
    "nodemailer": "^6.4.14",
    "pg": "^8.4.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "reflect-metadata": "^0.1.13",
    "systemjs": "^6.7.1",
    "ts-node": "^9.0.0",
    "typeorm": "^0.2.28",
    "uglify-js": "^3.11.2",
    "urql": "^1.10.1",
    "webpack": "^4.44.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@types/jest": "^26.0.15",
    "@types/js-cookie": "^2.2.6",
    "@types/koa-session": "^5.10.3",
    "@types/node": "^14.11.8",
    "@types/react": "^16.9.51",
    "@types/react-dom": "^16.9.8",
    "babel-plugin-transform-typescript-metadata": "^0.3.0",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.3",
    "typescript": "^4.0.3"
  },
  "jest": {
    "moduleFileExtensions": ["js", "jsx", "json", "ts", "tsx"],
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/*.{ts,js}",
      "!**/node_modules/**",
      "!**/.next/**",
      "!**/.vscode/**",
      "!**/graphql/**",
      "!**/infrastructure/**",
      "!**migration/**",
      "!**/public/**"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)x?$",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
